{
  "extends": ".nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM", "dom.iterable"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "nuxt-i18n",
      "@nuxtjs/device",
      "@nuxtjs/toast",
      "types/modules",
      "jest"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "cypress"]
}
