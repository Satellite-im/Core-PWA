{
  "name": "Satellite",
  "version": "00.0.1",
  "description": "An Amazing Capacitor App",
  "main": "./build/src/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac",
    "electron:build-linux": "npm run build && electron-builder build --linux",
    "rebuild-deps": "electron-rebuild"
  },
  "dependencies": {
    "@capacitor-community/electron": "^3.0.0",
    "electron-serve": "~1.1.0",
    "electron-is-dev": "~2.0.0"
  },
  "devDependencies": {
    "electron": "~13.1.3",
    "electron-builder": "~22.11.7",
    "typescript": "~4.3.4",
    "electron-rebuild": "~2.3.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "im.satellite.absolute",
    "productName": "Satellite",
    "files": [
      "assets/**",
      "build/**",
      "preloader.js",
      "plugins/**",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "app/icon_1024.png"
    },
    "win": {
      "target": "nsis",
      "icon": "app/icon_1024.png"
    },
    "linux": {
      "target": {
        "target": "appImage",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "app/icon_1024.png"
    }
  }
}
